<% if @user.groups.present? %>
  <h3><%= t(:label_group_plural) %></h3>
  <ul>
    <% @user.groups.each do |group| %>
      <li><%=link_to h(group), group %></li>
    <% end %>
  </ul>
<% end %>

<% if @user.companies.present? %>
  <h3><%= t(:label_company_plural) %></h3>
  <ul>
    <% @user.companies.each do |company| %>
      <li><%=link_to h(company), company %></li>
    <% end %>
  </ul>
<% end %>
